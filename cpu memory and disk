javascript:var cpu=navigator.hardwareConcurrency,memory=navigator.deviceMemory,disk=navigator.storage.estimate().then(function(storage){return storage.usage;});Promise.all([disk]).then(function(data){var diskUsage=data[0],infoWindow=window.open("", "infoWindow", "width=300,height=300,top=0,left=0,alwaysOnTop=1");setInterval(function(){infoWindow.document.body.innerHTML="CPU Usage: "+(100-(performance.now()-performance.timeOrigin)/1000/cpu*100).toFixed(2)+"%<br>Memory Usage: "+(performance.memory.usedJSHeapSize/1048576).toFixed(2)+" MB / "+memory+" GB"+"<br>Disk Usage: "+diskUsage+" bytes<br>Updating every 3 seconds...";},3000);infoWindow.document.body.innerHTML="CPU Usage: "+(100-(performance.now()-performance.timeOrigin)/1000/cpu*100).toFixed(2)+"%<br>Memory Usage: "+(performance.memory.usedJSHeapSize/1048576).toFixed(2)+" MB / "+memory+" GB"+"<br>Disk Usage: "+diskUsage+" bytes<br>Updating every 3 seconds...";});
